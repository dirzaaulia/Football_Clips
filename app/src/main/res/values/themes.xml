<resources>

  <!-- Splash Screen Theme -->
  <style name="Theme.FootballClips.SplashScreen" parent="Theme.SplashScreen">
    <!-- Set the splash screen background, animated icon, and animation duration. -->
    <item name="windowSplashScreenBackground">#424242</item>

    <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
         animated drawable. One of these is required. -->
    <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen</item>
    <!-- Required for animated icons -->
    <item name="windowSplashScreenAnimationDuration">1000</item>

    <!-- Set the theme of the Activity that directly follows your splash screen. -->
    <!-- Required -->
    <item name="postSplashScreenTheme">@style/Theme.FootballClips.DayNight</item>
  </style>

  <!-- Base application theme. -->
  <style name="Theme.FootballClips.DayNight" parent="Theme.FootballClips"/>

  <style name="Theme.FootballClips" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/grey_700</item>
    <item name="colorPrimaryVariant">@color/grey_800</item>
    <item name="colorSecondary">@color/blue_grey_400</item>
    <item name="colorSecondaryVariant">@color/blue_grey_300</item>

    <item name="android:colorBackground">@color/grey_50</item>
    <item name="colorSurface">@color/white</item>
    <item name="colorError">@color/red_400</item>

    <item name="colorOnPrimary">@color/white</item>
    <item name="colorOnSecondary">@color/black</item>
    <item name="colorOnBackground">@color/black</item>
    <item name="colorOnSurface">@color/black</item>
    <item name="colorOnError">@color/black</item>

    <item name="scrimBackground">@color/white_alpha_060</item>
    <item name="android:statusBarColor">?colorPrimaryVariant</item>
    <item name="android:navigationBarColor">?colorPrimary</item>

    <!-- Override Styles -->
    <item name="bottomNavigationStyle">@style/Widget.GameWish.BottomNavigationView</item>

    <!--System/Platform attributes-->
    <item name="android:windowBackground">?android:colorBackground</item>
  </style>
</resources>