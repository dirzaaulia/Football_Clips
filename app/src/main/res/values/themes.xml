<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.FootballClips.DayNight" parent="Theme.FootballClips"/>

  <style name="Theme.FootballClips" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/grey_700</item>
    <item name="colorPrimaryVariant">@color/grey_800</item>
    <item name="colorSecondary">@color/blue_grey_400</item>
    <item name="colorSecondaryVariant">@color/blue_grey_300</item>

    <item name="android:colorBackground">@color/grey_50</item>
    <item name="colorSurface">@color/white</item>
    <item name="colorPrimarySurfaceVariant">?attr/colorPrimaryVariant</item>
    <item name="colorError">@color/red_400</item>

    <item name="colorOnPrimary">@color/white</item>
    <item name="colorOnSecondary">@color/black</item>
    <item name="colorOnBackground">@color/black</item>
    <item name="colorOnSurface">@color/black</item>
