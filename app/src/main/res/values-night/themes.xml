<resources xmlns:tools="http://schemas.android.com/tools">

  <!--Final, top-level theme-->
  <style name="Theme.FootballClips.DayNight" parent="Theme.FootballClips.Dark"/>

  <style name="Theme.FootballClips.Dark" parent="Theme.FootballClips">
    <!--Color-->
    <item name="colorPrimary">@color/grey_400</item>
    <item name="colorPrimaryVariant">@color/grey_500</item>
    <item name="colorSecondary">@color/blue_grey_300</item>
    <item name="colorSecondaryVariant">@color/blue_grey_200</item>

    <item name="android:colorBackground">@color/black</item>
    <item name="colorSurface">@color/black_800</item>
    <item name="colorError">@color/red_200</item>

    <item name="colorOnPrimary">@color/black</item>
    <item name="colorOnSecondary">@color/black</item>
    <item name="colorOnBackground">@color/grey_50</item>
    <item name="colorOnSurface">@color/grey_50</item>
    <item name="colorOnError">@color/black</item>

    <item name="scrimBackground">@color/black_alpha_087</item>
    <item name="android:statusBarColor">@color/black_alpha_060</item>

    <item name="elevationOverlayEnabled">true</item>

    <!--System/Platform attributes-->
    <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
  </style>

</resources>